{
  "parser": "@typescript-eslint/parser",
  "extends": ["eslint:recommended"],
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/no-explicit-any": "off",
    "prefer-const": "error",
    "no-control-regex": "off"
  },
  "env": {
    "node": true,
    "es2022": true
  }
}
